# PlexCash Mobile App Environment Variables
# Copy this file to .env and update the values

# API Configuration
# Backend server URL (without trailing slash)
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000

# Development Settings
# Set to 'true' to simulate backend responses for testing
EXPO_PUBLIC_SIMULATE_BACKEND=false

# Firebase Configuration (if using Firebase auth)
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# App Configuration
EXPO_PUBLIC_APP_NAME=PlexCash
EXPO_PUBLIC_APP_VERSION=1.0.0

# Debug Settings
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL=info
